<h1>Все статьи на сайте</h1>
<p><%= link_to "Create new article", new_article_path, class: 'btn btn-primary btn-lg' %></p>
<!-- Выводим список статей -->
<% @articles.order(created_at: :desc).each do |article| %>
  <div class="card mb-3">
    <div class="card-header">
      <h5><%= article.title %></h5>
    </div>
    <div class="card-body">
      <p class="card-text"><%= article.body %></p>
      <!-- Кнопки для редактирования и удаления -->
      <div class="d-inline-flex gap-2">
        <%= link_to "Show", article_path(article), class: 'btn btn-primary' %>
        <%= link_to "Edit", edit_article_path(article), class: 'btn btn-success'%>
        <%= button_to "Delete", article_path(article), class: 'btn btn-danger', method: :delete %>
      </div>
    </div>
  </div>
<% end %>

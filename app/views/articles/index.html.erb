<h1>Все статьи на сайте</h1>
<p><%= link_to "Create new article", new_article_path %></p>
<!-- Выводим список статей -->
<% @articles.order(created_at: :desc).each do |article| %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= article.title %></h5>
      <p class="card-text"><%= article.body %></p>
      <!-- Кнопки для редактирования и удаления -->
      <div class="d-inline-flex gap-1">
      <%= link_to "Show", article_path(article), class: 'btn btn-link' %>
      <%= link_to "Edit", edit_article_path(article), class: 'btn btn-link'%>
      <%= button_to "Delete", article_path(article), class: 'btn btn-link', method: :delete %>
      </div>
    </div>
  </div>
  <h2></h2>
<% end %>

<%= link_to 'Show all articles', articles_path, class: 'btn btn-primary btn-lg' %>
<hr>
<h4>Статья <%= @article.title %></h4>
<p><%= @article.body %></p>
<%= link_to "Edit", edit_article_path(@article), class: "btn btn-primary btn-sm" %>
<hr>
<!-- <a href="/articles">Show all articles</a><br> -->
<!-- Форма создания коментария -->
<%= form_for([@article, @article.comments.build]) do |f| %>
  <%= f.label :body %><br>
  <%= f.text_area :body %><br>
  <%= f.submit %>
<% end %>
<hr>
<!-- Список коментариев -->
<% @article.comments.order(created_at: :desc).each do |comment| %>
  <h4><%= comment.body %></h4>
  <%= comment.author %> | <%= comment.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
  <hr>
<% end %>
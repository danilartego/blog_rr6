<h1>Статья <%= @article.title %></h1>
<h3><%= @article.body %></h3>
<p>
  <%= link_to "Edit", edit_article_path(@article) %>
</p>
<!-- <a href="/articles">Show all articles</a><br> -->
<%= link_to 'Show all articles', articles_path %>
<!-- Форма создания коментария -->
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p><%= f.label :author %><br>
    <%= f.text_field :author %></p>
  <p><%= f.label :body %><br>
    <%= f.text_area :body %></p>
  <%= f.submit %>
<% end %>
<!-- Список коментариев -->
<% @article.comments.order(created_at: :desc).each do |comment| %>
  <h3><%= comment.author %></h3>
  <p><%= comment.created_at %></p>
  <p><%= comment.body %></p>
<% end %>
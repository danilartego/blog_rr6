<h1><%= t('contacts.contact_us') %></h1>
<%= form_for :contact, url: contacts_path do |f| %>
  <% if @contact && @contact.errors.any? %>
    <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <%= f.label :email %><br>
  <%= f.text_field :email%><br>
  <%= f.label :message %><br>
  <%= f.text_area :message %><br>
  <%= f.submit 'Send message'%>
<% end %>
